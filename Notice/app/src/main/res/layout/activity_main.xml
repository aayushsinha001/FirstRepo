<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aayushsinha.notice.MainActivity">

    <TextView
        android:text="Welcome"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/welcome"
        android:layout_marginTop="33dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Register/Login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/id_registerlog"
        android:gravity="center"
        android:onClick="RegisterLoginPage"
        android:layout_marginBottom="74dp"
        android:layout_alignBottom="@+id/id_notify"
        android:layout_alignLeft="@+id/welcome"
        android:layout_alignStart="@+id/welcome"
        android:color="#e5e5e5"
        android:background="@android:color/darker_gray"
        android:alpha="0.75"
        android:elevation="24dp" />

    <ImageButton
        android:layout_width="95dp"
        app:srcCompat="@mipmap/notice"
        android:id="@+id/id_imagebtn"
        android:onClick="CheckBoard"
        android:src="@mipmap/notice"
        android:gravity="center"
        android:color="#e5e5e5"
        android:alpha="0.75"
        android:elevation="14dp"
        android:visibility="visible"
        android:layout_height="80dp"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/id_registerlog"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Notifyme"
        android:id="@+id/id_notify"
        android:gravity="center"
        android:layout_marginBottom="118dp"
        android:elevation="22dp"
        android:background="@android:color/darker_gray"
        android:color="#e5e5e5"
        android:alpha="0.75"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/id_imagebtn"
        android:layout_alignStart="@+id/id_imagebtn" />

</RelativeLayout>
